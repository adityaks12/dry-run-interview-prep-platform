generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String?   @unique
  createdAt DateTime  @default(now())
  sessions  Session[] // relation to Session.user
}

model Session {
  id            String          @id @default(uuid())
  userId        String? // foreign key column
  user          User?           @relation(fields: [userId], references: [id])
  interviewType String
  status        String          @default("active")
  startedAt     DateTime        @default(now())
  endedAt       DateTime?
  messages      Message[] // relation to Message.session
  answers       SessionAnswer[] // relation to SessionAnswer.session
}

model Message {
  id        String   @id @default(uuid())
  sessionId String // foreign key column
  session   Session  @relation(fields: [sessionId], references: [id])
  role      String // "system" | "user" | "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())
}

model SessionAnswer {
  id            String   @id @default(uuid())
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id])
  questionText  String   @db.Text
  audioUrl      String
  audioDuration Int?
  sttTranscript String?  @db.Text
  sttConfidence Float?
  createdAt     DateTime @default(now())
}
